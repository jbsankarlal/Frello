                                                        </a>
                                                    </li>
                                                    
                                                    <li class="w-icon">
                                                        <a onclick="addToWishlist('{{ this._id }}')">
                                                            <i class="icon_heart_alt"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="pi-text">
                                                <div class="catagory-name">{{ this.prodCat }}</div>
                                                <a href="#">
                                                    <h5>{{ this.prodName }}</h5>
                                                </a>
                                                <div class="product-price">
                                                    ₹{{ this.prodSellPrice }}
                                                    <span>₹{{ this.prodMarketPrice }}</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                {{/each}}
                            </div>
                        </div>

    <!-- Header Section Begin -->
    
    <!-- Header End -->

    <!-- Breadcrumb Section Begin -->
    <div class="breacrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <a href="/"><i class="fa fa-home"></i> Home</a>
                        <span>Login</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Form Section Begin -->

    <!-- Register Section Begin -->
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="login-form">
                        <h2>Login</h2>
                        <form action="/loggin" method="post">
                            <div class="group-input">
                                <input type="text" id="email" placeholder="e-mail Id" name="email" class="border border-success">
                            </div>

                           
                            <div class="group-input">
                                <input type="password" id="pass" placeholder="Enter your Password" name="password" class="border border-success">
                            </div>
                             <button type="submit" class="btn btn-success login-btn">LOGIN</button>

                            <div class="group-input gi-check">
                                <div class="gi-more">
                                    <label for="save-pass">
                                        Save Password
                                        <input type="checkbox" id="save-pass">
                                        <span class="checkmark"></span>
                                    </label>
                                    <a href="#" class="forget-pass">Forget your Password</a>
                                </div>
                            </div>

                            <h6 class="text-center">OR</h6>

                            {{!-- <button type="submit" class="btn btn-primary login-btn mt-3"></button> --}}
                            <a href="/otploggin" class="btn btn-primary login-btn mt-3">LOGIN WITH OTP</a>
                        </form>
                        <div class="switch-login">
                            <a href="/signup" class="or-login text-danger font-weight-bold">Or Create An Account</a>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Register Form Section End -->

    


  <table class="table table-hover" id="tbl_exporttable_to_xls">
  <thead>
    <tr>
      <th scope="col">SNo</th>
      <th scope="col">Product Name</th>
      <th scope="col">Quantity Sold</th>
      <th scope="col">Per Product Price</th>
      <th scope="col">Total</th>
    </tr>
  </thead>
  <tbody>
    {{#each report}}
    <tr>
      <th class="create_index"></th>
      <td>{{this.name}}</td>
      <td>{{this.sum}}</td>
      <td>₹{{this.cost}}</td>
      <td>₹{{this.total}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>








 <script>
   var divs = document.querySelectorAll('.create_index'); for (var i = 0; i <
    divs.length; ++i) { divs[i].innerHTML = i + 1; }
  </script>




<script>
    function ExportToExcel(type, fn, dl) {
       var elt = document.getElementById('tbl_exporttable_to_xls');
       var wb = XLSX.utils.table_to_book(elt, { sheet: "sheet1" });
       return dl ?
         XLSX.write(wb, { bookType: type, bookSST: true, type: 'base64' }):
         XLSX.writeFile(wb, fn || ('Frello Sales Report.' + (type || 'xlsx')));
    }
</script>

<script>
    function Export() {
            html2canvas(document.getElementById('tbl_exporttable_to_xls'), {
                onrendered: function (canvas) {
                    var data = canvas.toDataURL();
                    var docDefinition = {
                        content: [{
                            image: data,
                            width: 500,
                            color:"solid black 1px"
                        }]
                    };
                    pdfMake.createPdf(docDefinition).download("Table.pdf");
                }
            });
        }
</script>


